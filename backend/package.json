{
  "name": "todo-app-backend",
  "description": "A very basic todo app backend.",
  "homepage": "https://yoyo178.github.io/todo-app",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "-_YoYo178_-"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YoYo178/todo-app"
  },
  "scripts": {
    "build": "pnpm run lint && pnpm run no-lint-build",
    "no-lint-build": "tsc --build tsconfig.prod.json",
    "clean-install": "rm -rf ./node_modules && rm -r pnpm-lock.yaml && pnpm i",
    "dev": "cross-env NODE_ENV=development node --env-file=./config/.env.development -r ts-node/register ./src",
    "dev:hot": "cross-env NODE_ENV=development nodemon --exec \"ts-node ./src\" --watch ./src --ext .ts",
    "lint": "eslint",
    "start": "cross-env NODE_ENV=production node --env-file=./config/.env.production -r module-alias/register ./dist",
    "phantom-start": "cross-env NODE_ENV=production node -r module-alias/register ./dist",
    "test": "cross-env NODE_ENV=test vitest",
    "type-check": "tsc --noEmit"
  },
  "engines": {
    "node": ">=20.6.0"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "cross-env": "^10.1.0",
    "dayjs": "^1.11.19",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "inserturlparams": "^2.0.5",
    "jet-env": "^1.1.6",
    "jet-logger": "^2.2.3",
    "jet-paths": "^3.0.0",
    "jet-validators": "^2.3.1",
    "jsonfile": "^6.2.0",
    "jsonwebtoken": "^9.0.3",
    "module-alias": "^2.3.4",
    "mongoose": "^9.2.3",
    "morgan": "^1.10.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@stylistic/eslint-plugin": "^5.9.0",
    "@swc/core": "^1.15.17",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/find": "^0.2.4",
    "@types/fs-extra": "^11.0.4",
    "@types/jsonfile": "^6.1.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.3.2",
    "@types/supertest": "^7.2.0",
    "eslint": "^10.0.2",
    "eslint-plugin-n": "^17.24.0",
    "find": "^0.3.0",
    "fs-extra": "^11.3.3",
    "jiti": "^2.6.1",
    "nodemon": "^3.1.14",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.30.3+sha512.c961d1e0a2d8e354ecaa5166b822516668b7f44cb5bd95122d590dd81922f606f5473b6d23ec4a5be05e7fcd18e8488d47d978bbe981872f1145d06e9a740017",
  "_moduleAliases": {
    "@src": "dist"
  }
}
